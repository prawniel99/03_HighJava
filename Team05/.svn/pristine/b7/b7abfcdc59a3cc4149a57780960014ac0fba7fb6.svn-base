#qnaProdPic-container-head {
	text-align: center;
}
#qnaProdPic-container-body {
	width: 200px;
	height: 200px;
	border: 1px solid black;
}
#qnaProdPic-container-body img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  display: block;
  margin: auto;
}

.container {
	padding: 20px;
}

#qnaresult {
	width: 80%;
	margin: 0 auto;
}


.container-main {
	border: 1px solid black;
	width: 1000px;
	height: 600px;
	
	position: absolute;
	left: 50%;
	transform: translate(-500px);
}

#qnaNotice {	
	width: 800px;
	height: 200px;
	border: 3px solid rgb(222, 222, 222);
}


.input-wrapper {
    position: relative;
}


#prod2 {
    /*width: 100%; /* 입력창이 부모 컨테이너의 폭에 맞게 조정 */
    padding: 0;
    box-sizing: border-box; /* padding이 전체 폭에 포함되도록 설정 */
}

#accordion {
	width: 80%;
	margin: 0 auto;
}

#qna-search-bar {
	display: none;
}

.dropdown-container {
	display: none;
}


#modal-prodName {
	
}

.input-wrapper {
	display: flex;
	width: 100%;
	height: 140px;
}
.modal-titles {
	display: inline-block;
	height: 100px;
	margin-right: 10px;
	line-height: 2;
	
}
.modal-inputs {
	display: inline-block;
	width: 200px;
	height: 100px;
}
.modal-inputs input {
	width: 180px;
	margin-bottom: 6px;
}

/* 상품명 dropdown */
.prod-dropdown {
	background: white;
	position: absolute;
	width: 365px;
	height: 124px;

	font-size: 13px;
}
.prod-dropdown-cover {
	position: absolute;
	width: 365px;
	border: 1px solid black;
	height: 124px;
	overflow: hidden;
	display: none;
}
.prod-dropdown div {
    cursor: pointer;
}
.prod-dropdown div.selected {
	background-color: #ddd;
}

.qna h1 {
	text-align: center;
}


.card {
