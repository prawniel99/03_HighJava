body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #ffffff; /* 흰색 배경으로 설정 */
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.main-content {
    flex-grow: 1;
    padding: 20px;
}

.footer {
    background-color: #e8e4d9; /* 연한 베이지 색상 */
    color: #333; /* 텍스트는 진한 회색으로 */
    text-align: center;
    padding: 10px 0;
    width: 100%;
    margin-top: auto;
}

.header-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #ffffff; /* 헤더도 흰색으로 설정 */
    padding: 20px;
    border-bottom: 1px solid #ddd; /* 헤더 하단에 은은한 회색 테두리 */
}

.header-top h1 {
    margin: 0;
    font-size: 24px;
    color: #333; /* 헤더 텍스트는 진한 회색 */
}

.header-options ul {
    list-style-type: none;
    padding: 0;
}

.header-options li {
    display: inline;
    margin-right: 15px;
}

.main-nav ul {
    list-style-type: none;
    padding: 0;
    background-color: #f4f0e6; /* 부드러운 베이지 톤 네비게이션 */
    overflow: hidden;
}

.main-nav li {
    float: left;
}

.main-nav li a {
    display: block;
    padding: 14px 20px;
    color: #333; /* 진한 회색 텍스트 */
    text-align: center;
    text-decoration: none;
}

.main-nav li a:hover {
    background-color: #e0dbcf; /* 네비게이션 링크에 호버할 때 연한 베이지 */
    color: #333;
}

.best-item {
    padding: 20px;
    background-color: #faf9f7; /* 아주 연한 아이보리 톤 */
    flex-grow: 1;
}

.items {
    display: flex;
    justify-content: space-between;
}

.item-box {
    width: 22%;
    height: 150px;
    background-color: #f4f0e6; /* 베이지 계열의 아이템 박스 */
    border: 1px solid #e0dbcf; /* 부드러운 베이지 테두리 */
    border-radius: 5px;
}
.main-nav {
    background-color: #f4f0e6; /* 부드러운 베이지 톤 네비게이션 */
    margin: 0;
    padding: 0;
    z-index: 10; /* 네비게이션 바가 다른 요소보다 위에 있도록 설정 */
    position: relative; /* 드롭다운 메뉴가 부모 요소 기준으로 위치하도록 설정 */
}

.main-nav ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    overflow: visible; /* 드롭다운 메뉴가 제대로 표시되도록 설정 */
}

.main-nav::after {
    content: "";
    display: table;
    clear: both;
}

.main-nav li {
    float: left;
    position: relative; /* 드롭다운 메뉴가 이 위치를 기준으로 절대 위치 설정 */
}

.main-nav li a {
    display: block;
    padding: 14px 20px;
    color: #333;
    text-align: center;
    text-decoration: none;
}

.main-nav li a:hover {
    background-color: #e0dbcf; /* 네비게이션 링크에 호버할 때 연한 베이지 */
    color: #333;
}

.dropdown-content {
    display: none; /* 기본적으로 드롭다운 메뉴는 숨김 */
    position: absolute; /* 부모 요소에 대해 절대 위치 */
    background-color: #ffffff; /* 하위 메뉴 배경 흰색 */
    min-width: 150px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* 드롭다운에 그림자 추가 */
    z-index: 20; /* 드롭다운 메뉴가 다른 요소 위에 표시되도록 설정 */
    top: 100%; /* 부모 요소 바로 아래에 위치 */
    left: 0;
}

.dropdown-content li {
    display: block;
}

.dropdown-content li a {
    padding: 10px;
    color: #333;
    text-decoration: none;
}

.dropdown-content li a:hover {
    background-color: #ddd; /* 하위 메뉴 항목에 마우스를 올릴 때 배경색 */
}

/* 부모 요소인 dropdown을 hover할 때 하위 메뉴 표시 */
.dropdown:hover .dropdown-content {
    display: block; /* 부모 요소에 마우스를 올리면 드롭다운 메뉴가 나타남 */
    z-index: 20; /* 드롭다운 메뉴가 상위에 위치하도록 추가 설정 */
}
.nav-left {
    float: left;
}

.nav-right {
    float: right;
}

.nav-right li {
    margin-left: 20px; /* 오른쪽 항목 사이의 간격을 추가 */
}
